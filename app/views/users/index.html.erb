<% provide(:title, 'All users') %>
<div class="col-sm-3">
   <%= render 'layouts/leftbar' %>
</div>

<div class="col-sm-6">
<h1>All users</h1>
<%= will_paginate %>

<!-- ユーザー検索機能 -->
 <p>user search</p>
  <%= form_tag(users_path, :method => 'get' ) do %>
   <%= text_field_tag :search %>
   <%= submit_tag 'Search', :name => nil %>
  <% end %>
  
<ul class="users">
  <% @users.each do |user| %>
   <%= render @users %>
  <% end %>
</ul>

<%= will_paginate %>
</div>

<div class="col-sm-3">
    
   <%= render 'layouts/rightbar' %>
    
</div>
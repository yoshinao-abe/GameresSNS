<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-sm-3">
    
    <section class="user_info text-center">
      <h1>
        <%#= gravatar_for @user, class: 'col-12' %>
      <%= image_tag @user.image.url, class: 'profile-image mt-2 mr-2' %>
        <div class="row mb-2">
          <%= @user.name %>
        </div>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <p>投稿数　<%= @user.microposts.count %></p>
    </section>
    <% if current_user?(@user) %>
       <%= link_to "編集する", edit_user_path, method: :get %>
     <% end %>
    <%= render 'follow_form' if logged_in? %>
    <%= render 'layouts/leftbar' %>
  </aside>
  <div class="col-sm-6 bg-light">
    <% if @user.microposts.any? %>
      <h2 class="text-center bg-success font-weight-bold">投稿一覧</h2>
      <ol class="microposts col">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
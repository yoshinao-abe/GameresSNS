<!--　左側　-->
  <div class="leftbar col-md" >
    <div class="list-group" style="max-width: 400px">
       <% if logged_in? %>
        <%= link_to "HOME",root_path ,    class:"list-group-item-success list-group-item list-group-item-action active" %>
        <%= link_to "MYPAGE", current_user , class:"list-group-item-success list-group-item list-group-item-action active" %>
        <%= link_to "USERS", users_path(current_user) , class:"list-group-item-success list-group-item list-group-item-action active" %>
        <%= link_to "TAG-INDEX", "/index" ,   class:"list-group-item-success list-group-item list-group-item-action active" %>  
        <%= link_to "LOGOUT",logout_path, method: :delete,
                                          data: { confirm: "ログアウトしてよろしいですか？" },
                                          class:"list-group-item-success list-group-item list-group-item-action active" %>

       <% else %>
        <%= link_to "Start", login_path, class:"list-group-item-success list-group-item list-group-item-action active" %>
       <% end %>
 
    </div>
  </div>
